@using BestRestaurants.Models;

<h1>Restaurants!</h1>

@if(@Model.Count == 0)
{
  <p>No Restaurants added.</p>
}

<ul>
  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Show", new { id = restaurant.RestaurantId })</li>
  }
</ul>


<p>@Html.ActionLink("Add a new restaurant", "Create", "Restaurant")</p>