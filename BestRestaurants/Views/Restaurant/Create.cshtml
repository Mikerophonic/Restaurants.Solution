@model BestRestaurants.Models.Restaurant;
@using BestRestaurants.Models;

@using (Html.BeginForm("Index", "Restaurant", FormMethod.Post))
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>

    @Html.LabelFor(model => model.City)
    @Html.TextBoxFor(model => model.City)
    <br>

    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownListFor(model => model.Cuisine, new SelectList(Enum.GetValues(typeof(Cuisine))))
    <br>

    <input type="submit" value="Add Restaurant">
} 

